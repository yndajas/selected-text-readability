{
  "manifest_version": 2,

  "name": "Selected Text Readability",
  "description": "Measure readability of selected text",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
   "activeTab"
  ],

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdnjs.cloudflare.com https://maxcdn.bootstrapcdn.com; object-src 'self';"
}
